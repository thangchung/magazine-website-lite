@model Cik.MagazineWeb.Application.ViewModels.HomePageViewModel

@section topmenu {
    @Html.Partial("_TopMenu", Model.TopMenu)
}

<!-- The hottest articles -->
<div class="portfolio container">
    <div class="portfolio-title">
        <h3>The hottest articles</h3>
    </div>
    <div class="row">
        @foreach (var item in Model.HottestItems)
        {
            <div class="work span3">
                <img src="@Url.Content("~" + @item.AvatarImage)" alt="#">
                <h4>@item.Title</h4>
                <p>@item.ShortDescription</p>
                <div class="icon-awesome">
                    <a href="@Url.Content("~" + @item.AvatarImage)" rel="prettyPhoto"><i class="icon-search"></i></a>
                    <a href="@Url.Content("/Home/Details/" + @item.ItemId)"><i class="icon-link"></i></a>
                </div>
            </div>
        }
    </div>
</div>
        
